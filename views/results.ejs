<!DOCTYPE html>
<html>
<head>
  <title>MovieAPI</title>
  <style type="text/css">
  </style>


  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css" integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">

</head>


<body >
  



       

       

       
       


<div class="m-content">

         <dir class="row" style="padding:0 ; margin:0px;">
							  	   
							  	   
			 <% data["Search"].forEach(function(movie){ %>
                                  
                         <dir class="col-lg-4 col-md-6" style="text-align:center;">
							  	   	    
							  	   	     
							  	<img src="<%= movie["Poster"] %>" style="height: 300px; width: auto;">
							  	   	     
							  	
							  	   	     
							  	   	     <p  style="font-size:14px;margin-top:14px;font-family: comfortaa; "><%= movie["Title"] %></p>
							  	   	     <p  style="font-size:14px;margin-top:14px;font-family: comfortaa; "><%= movie["Year"] %></p>
							  	   	     
                                
						 </dir>
	
             <% }); %>

         </dir>     
</div>



       <a href="/search" style="position: absolute;
        font-size:20px;
        left: 50%;
        margin-bottom:40px;
        outline:none;
        transform: translate(-50%);
        text-align: center;">Search Again </a>

  


</body>
</html>